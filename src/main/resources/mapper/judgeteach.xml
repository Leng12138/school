<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.leng.tms.dao.JudgeTeachDao">

    <select id="thisSnoTno" parameterType="java.lang.String" resultType="java.lang.String">
        select no from teachclass where teaclass = (select stuclass from students where no = #{no,jdbcType=VARCHAR})
    </select>

    <select id="getJudgeResult" resultType="com.leng.tms.bean.Teachers">
        select * from teachers where no in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <update id="updateJudge">
        update teachers
        <set>
            <if test="clat == 'clata'">
                clata = clata + 1,
            </if>
            <if test="clat == 'clatb'">
                clatb = clatb + 1,
            </if>
            <if test="clat == 'clatc'">
                clatc = clatc + 1,
            </if>
            <if test="teme == 'temea'">
                temea = temea + 1,
            </if>
            <if test="teme == 'temeb'">
                temeb = temeb + 1,
            </if>
            <if test="teme == 'temec'">
                temec = temec + 1,
            </if>
            <if test="woco == 'wocoa'">
                wocoa = wocoa + 1,
            </if>
            <if test="woco == 'wocob'">
                wocob = wocob + 1,
            </if>
            <if test="woco == 'wococ'">
                wococ = wococ + 1,
            </if>
            <if test="qaat == 'qaata'">
                qaata = qaata + 1,
            </if>
            <if test="qaat == 'qaatb'">
                qaatb = qaatb + 1,
            </if>
            <if test="qaat == 'qaatc'">
                qaatc = qaatc + 1,
            </if>
        </set>
        where
        no = #{no,jdbcType=VARCHAR}
    </update>

    <select id="getAllJudgeResult" resultType="com.leng.tms.bean.Teachers">
        select * from teachers
    </select>

    <select id="findTeacher" resultType="com.leng.tms.bean.Teachers">
        select * from teachers
        <where>
            <if test="no != '' and no != null">
                and no = #{no,jdbcType=VARCHAR}
            </if>
            <if test="name != '' and name != null">
                and name like '%${name}%'
            </if>
            <if test="subject != '' and subject != null">
                and subject = #{subject,jdbcType=VARCHAR}
            </if>
        </where>
    </select>

</mapper>